<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Listing Details</h3>
        </div>

        <div class="card col-6 offset-3 show-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing-image">
            <div class="card-body">
                <h5 class="card-title"><b><%= listing.title %></b></h5>
                <h6 class="card-text"></h6>
                <p class="card-text">
                    <%= listing.description %> <br>
                    &#8377;<%= listing.price.toLocaleString('en-IN') %>/night <br>
                    <%= listing.location %>, <%= listing.country %>
                </p>
            </div>
        </div>
        <br>

        <div class="btns col-6 offset-3">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn action-btn">Edit</a>
        
            <form action="/listings/<%= listing._id %>/?_method=DELETE" method="post">
                <button class="btn btn-dark action-btn">Delete</button>
            </form>
        </div>
    </div>

</body>


